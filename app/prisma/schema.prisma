  id        String   @id @default("default")
  
  // ğŸ¨ Marker Icons (JSON array)
  markerIcons String  @default("[\"ğŸ’¦\",\"ğŸ‘„\",\"ğŸ‘\",\"ğŸ„\",\"ğŸ¦¶\",\"ğŸ’•\",\"ğŸš€\",\"ğŸ›‘\"]")
  
  // ğŸ’¾ Playback Settings
  autoResume  Boolean @default(true)
  
  // ğŸ¥ Quick Action Settings
  quickActionMode String @default("highlight") // "highlight" or "explicit"
  quickActionIcon String @default("âœ¨")
  quickActionLabel String @default("Highlight")
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
